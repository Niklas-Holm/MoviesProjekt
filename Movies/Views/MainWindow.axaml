<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Movies.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="Movies.Views.MainWindow"
        x:DataType="vm:MovieViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Movies"
        Background="white">


    <Design.DataContext>
        <vm:MovieViewModel/>
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" FontSize="56" />
        <StackPanel>
            <Label Content="Movie Title" Target="{Binding #TitleBox}"/>
            <TextBox x:Name="TitleBox" Text="{Binding Title}" Width="200"/>
        </StackPanel>
        <StackPanel>
            <Label Content="Movie Duration (Minutes)" Target="{Binding #TitleBox}"/>
            <NumericUpDown
                Minimum="1"
                Maximum="300"
                Increment="1"
                Value="{Binding DurationInMin, Mode=TwoWay}"
                Width="200"/>
        </StackPanel>
        <StackPanel>
            <Label Content="Movie Genre" Target="{Binding #TitleBox}"/>
            <ComboBox
                ItemsSource="{Binding Genres}"
                SelectedItem="{Binding Genre, Mode=TwoWay}"
                Width="200"/>        
        </StackPanel>
        <Button Margin="0 10" Background="LightBlue">Submit</Button>
    </StackPanel>
</Window>