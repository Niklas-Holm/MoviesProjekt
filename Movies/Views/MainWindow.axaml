<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Movies.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="Movies.Views.MainWindow"
        x:DataType="vm:MovieViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Movies"
        Background="white">


    <Design.DataContext>
        <vm:MovieViewModel/>
    </Design.DataContext>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" FontSize="50" />
        <StackPanel>
            <Label Content="Movie Title" Target="{Binding #TitleBox}"/>
            <TextBox x:Name="TitleBox" Text="{Binding Title}" Width="200"/>
        </StackPanel>
        <ComboBox
            ItemsSource="{Binding Genres}"
            SelectedItem="{Binding Genre, Mode=TwoWay}"
            Width="200"/>
    </StackPanel>
</Window>